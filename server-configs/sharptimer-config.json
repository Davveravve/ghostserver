{
  "// GENERAL": "------------------------",
  "PluginEnabled": true,
  "ChatPrefix": "[Ghost Timer]",
  "LoggingEnabled": true,

  "// DATABASE": "------------------------",
  "DatabaseType": "MySQL",
  "MySqlHost": "localhost",
  "MySqlPort": 3306,
  "MySqlUser": "ghost",
  "MySqlPassword": "GhostServer2024",
  "MySqlDatabase": "ghost_gaming",
  "TablePrefix": "st_",

  "// GAME MODE": "------------------------",
  "SurfEnabled": true,
  "BhopEnabled": true,

  "// TIMER FEATURES": "------------------------",
  "RespawnEnabled": true,
  "RespawnCommand": "!r",
  "CheckpointsEnabled": true,
  "MaxCheckpoints": 100,
  "TeleportEnabled": true,
  "StageTeleportEnabled": true,
  "BonusTeleportEnabled": true,

  "// HUD": "------------------------",
  "HudEnabled": true,
  "VelocityEnabled": true,
  "KeysOverlayEnabled": true,
  "TimerPositionX": 0.5,
  "TimerPositionY": 0.15,
  "SpeedometerEnabled": true,

  "// RECORDS": "------------------------",
  "GlobalRanksEnabled": true,
  "PersonalBestEnabled": true,
  "WorldRecordEnabled": true,
  "ServerRecordEnabled": true,

  "// ANNOUNCEMENTS": "------------------------",
  "AnnounceRecordsEnabled": true,
  "AnnounceWorldRecord": true,
  "AnnouncePersonalBest": true,
  "WRMessage": "NEW WORLD RECORD! {player} finished {map} in {time}!",
  "PBMessage": "{player} got a new PB: {time} (#{rank})",
  "SRMessage": "NEW SERVER RECORD! {player}: {time}",

  "// SOUNDS": "------------------------",
  "SoundsEnabled": true,
  "WRSound": "sounds/ghost/wr.wav",
  "PBSound": "sounds/ghost/pb.wav",
  "FinishSound": "sounds/ghost/finish.wav",

  "// STYLES": "------------------------",
  "StylesEnabled": true,
  "AvailableStyles": ["Normal", "Sideways", "W-Only", "HSW", "Low Gravity"],
  "DefaultStyle": "Normal",

  "// POINTS SYSTEM": "------------------------",
  "PointsEnabled": true,
  "PointsPerCompletion": 10,
  "PointsPerWR": 100,
  "PointsPerTop10": 50,
  "PointsPerImprovement": 5,
  "TierMultipliers": {
    "1": 1.0,
    "2": 1.2,
    "3": 1.5,
    "4": 2.0,
    "5": 3.0,
    "6": 5.0
  },

  "// MAP TIERS": "------------------------",
  "DefaultMapTier": 1,
  "ShowMapTierOnJoin": true,
  "MapTierColors": {
    "1": "#00FF00",
    "2": "#7FFF00",
    "3": "#FFFF00",
    "4": "#FFA500",
    "5": "#FF0000",
    "6": "#8B0000"
  },

  "// ZONES": "------------------------",
  "AutoDetectZones": true,
  "StartZoneTriggers": ["trigger_start", "trigger_teleport_start", "timer_start", "zone_start"],
  "EndZoneTriggers": ["trigger_end", "trigger_teleport_end", "timer_end", "zone_end"],
  "StageZoneTriggers": ["trigger_stage", "stage_"],
  "BonusZoneTriggers": ["trigger_bonus", "bonus_"],

  "// ANTI-CHEAT": "------------------------",
  "AntiCheatEnabled": true,
  "MaxVelocity": 4000,
  "MaxPrestrafe": 300,
  "MaxBhops": 20,
  "AutoBhopDetection": false,

  "// PLAYER VISIBILITY": "------------------------",
  "HidePlayersEnabled": true,
  "DefaultHidePlayers": false,
  "HidePlayersCommand": "!hide",
  "ShowPlayersCommand": "!show",

  "// SPECTATE": "------------------------",
  "SpectateEnabled": true,
  "SpectateCommand": "!spec",
  "ShowSpecList": true,

  "// REPLAYS": "------------------------",
  "ReplaysEnabled": false,
  "ReplayBotEnabled": false,
  "SaveReplaysToFile": false,

  "// MISC": "------------------------",
  "AutoRespawnEnabled": true,
  "AutoRespawnDelay": 3.0,
  "StartInAir": true,
  "PrestrafeEnabled": true,
  "JumpStatsEnabled": true
}
